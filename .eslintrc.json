{
  "extends": "airbnb-base",
  "rules": {
      "max-len": [1, 200, 2, {"ignoreComments": true}],
      "no-underscore-dangle": [0, { "allow": [] }],
      "semi": ["error", "always"],
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
      "camelcase": "off"
  },
  "overrides": [
      {
          "files": "*.test.js",
          "rules": {
              "no-unused-expressions": "off",
              "camelcase": "off"
          }
      },
      {
          "files": "*.js",
          "rules": {
              "no-console": "off"
          }
      }
  ],
  "globals": {
      "logger": true
  }
}
